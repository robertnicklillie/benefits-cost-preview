@model AddEmployeeViewModel
@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add new employee</h2>
<hr />

<form asp-action="AddEmployee" method="post" class="mb-3">
    <div class="mb-4">
        <label asp-for="FirstName" class="form-label">What is the employee's first and last name?</label>
        <div class="row">
            <div class="col">
                <input asp-for="FirstName" class="form-control" placeholder="First" style="margin-right: 5px;">
            </div>
            <div class="col">
                <input asp-for="LastName" class="form-control" placeholder="Last"> 
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col">
            <label asp-for="DependentsCount" class="form-label">How many dependents for benefits coverage?</label>
            <input asp-for="DependentsCount" class="form-control" placeholder="0 to 20">
        </div>
        <div class="col">
            <label asp-for="EmployerCoveragePercent" class="form-label">What percentage will the the employer cover?</label>
            <input asp-for="EmployerCoveragePercent" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary-color">Submit</button>
</form>
<a asp-action="Index">Back to preview</a>


