@{
    ViewData["Title"] = "Home Page";
}

<div class="card text-center bg-transparent mt-5">
    <div class="card-title bg-primary-color">
        <h2>Total Cost</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <h4 class="secondary-color">Annual</h4>
                <p>$12,000</p>
            </div>
            <div class="col-3">
                <h4 class="secondary-color">Quarterly</h4>
                <p>$3,000</p>
            </div>
            <div class="col-3">
                <h4 class="secondary-color">Monthly</h4>
                <p>$1,000</p>
            </div>
            <div class="col-3">
                <h4 class="secondary-color">Per Pay Period</h4>
                <p>$461.54</p>
